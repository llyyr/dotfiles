#!/bin/sh

function convert_for_phone {
    mkdir -p done # create the output directory if it doesn't exist
    for file in ./*.{mp4,mov,mkv,webm}; do
        if (( $(ffprobe -v error -select_streams v:0 -show_entries stream=width,height -of csv=p=0 "$file" | awk -F',' '{print ($1 > $2) ? 1 : 0}') ))
        then # landscape video
            ffmpeg -i "$file" -c:v libx264 -vf "scale=min(2160\,iw):min(1080\,ih):force_original_aspect_ratio=decrease:force_divisible_by=2" -preset slow -crf 28 -c:a libfdk_aac -b:a 96k "./done/${file##*/}"
        else # portrait video
            ffmpeg -i "$file" -c:v libx264 -vf "scale=min(1080\,iw):min(2160\,ih):force_original_aspect_ratio=decrease:force_divisible_by=2" -preset slow -crf 28 -c:a libfdk_aac -b:a 96k "./done/${file##*/}"
        fi
    done
}

if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
  convert_for_phone
fi
